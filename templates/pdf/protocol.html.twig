<!--
  Szablon protokołu PDF.
  Używa prostego HTML i CSS, aby zapewnić kompatybilność z biblioteką mPDF.
  Zmienne takie jak {{ user_name }} są zastępowane dynamicznie przed wygenerowaniem pliku.
-->
<!doctype html>
<html lang="pl">
<head>
  <meta charset="utf-8"/>
  <style>
    body { font-family: DejaVu Sans, sans-serif; font-size: 12px; }
    h1 { text-align: center; }
    table { width:100%; border-collapse: collapse; }
    th, td { border:1px solid #000; padding:5px; }
    th { background-color: #f2f2f2; }
    .footer { position: fixed; bottom: 0; width: 100%; text-align: center; font-size: 10px; }
  </style>
</head>
<body>
  <header>
    <img src="{{logo_path}}" alt="logo" style="max-height:60px;"><br>
    <h2>Protokół wydania / potwierdzenie posiadania urządzeń</h2>
  </header>

  <section>
    <p>Użytkownik: {{user_name}} (ID: {{user_id}})</p>
    <p>Data: {{date}}</p>

    <table>
      <thead>
        <tr>
          <th>Nazwa</th>
          <th>Model</th>
          <th>Serial</th>
          <th>Typ</th>
        </tr>
      </thead>
      <tbody>
        {{items_rows}}
      </tbody>
    </table>
  </section>

  <div class="footer">
    {{pdf_footer}}
  </div>
</body>
</html>